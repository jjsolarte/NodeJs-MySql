<div class="container p-4">
	<div class="row">
		
		{{#each links}}
			<div class="col-md-3">
				<div class="card text-center">
					<div class="card-body">
						<a href="{{url}}" target="_blank">
							<h3 class="card-title text-uppercase">
								{{title}}
							</h3>
						</a>
						<p class="m-2" >{{description}}</p>
						<p>{{timeago createAt}}</p>
						<a href="/links/delete/{{idlinks}}" class="btn btn-danger">Delete Link</a>
						<a href="/links/edit/{{idlinks}}" class="btn btn-secondary">Edit Link</a>
					</div>
				</div>
			</div>
		{{else}}
			<div class="col-md-4 mx-auto">
				<card class="card-body text-center">
					<p>There are not likns saved yet</p>
					<a href="/links/add" >Create One!</a>
				</card>
			</div>
		{{/each}}

	</div>
</div>